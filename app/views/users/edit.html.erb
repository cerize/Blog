<h1>Edit your information</h1>

<%= form_for @user  do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email%>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to "Change my password", edit_password_path %>
